{% extends 'base.html.twig' %}

{% block title %}Color index{% endblock %}

{% block body %}
    <h3>Colors</h3>

    <table class="list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for color in colors %}
            <tr>
                <td>{{ color.id }}</td>
                <td>{{ color.name }}</td>
                <td>
                    <a class="buttonAdd" href="{{ path('color_new') }}">Create new</a>
                    <a class="btn-view" href="{{ path('color_show', {'id': color.id}) }}">show</a>
                    <a class="btn-update" href="{{ path('color_edit', {'id': color.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
