{% extends 'base.html.twig' %}

{% block title %}Size index{% endblock %}

{% block body %}
    <h3>Size</h3>

    <table class="list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>

        <tbody>
        {% for size in sizes %}
            <tr>
                <td>{{ size.id }}</td>
                <td>{{ size.name }}</td>
                <td>
                    <a class="buttonAdd" href="{{ path('size_new') }}">Create new</a>
                    <a class="btn-view" href="{{ path('size_show', {'id': size.id}) }}">show</a>
                    <a class="btn-update" href="{{ path('size_edit', {'id': size.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
        
    </table>

{% endblock %}
