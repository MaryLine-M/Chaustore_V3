{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}


{% block body %}

    <h3>SHOES</h3>

    <table class="list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Image</th>
                <th>Price</th>
                <th>Gender</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>

        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.image }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.gender }}</td>
                <td>
                    <a class="buttonAdd" href="{{ path('product_new') }}">Create new</a>
                    <a class="btn-view" href="{{ path('product_show', {'id': product.id}) }}">show</a>
                    <a class="btn-update" href="{{ path('product_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

